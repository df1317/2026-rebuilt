# EditorConfig helps maintain consistent coding styles
# between different editors and IDEs
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{xml,html}]
indent_style = space
indent_size = 2

[*.gradle]
indent_style = space
indent_size = 4